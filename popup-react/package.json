{
  "name": "popup-react",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && cp -r build/. ../build/popup-react/",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch-build": "npm-watch build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "npm-watch": "^0.11.0",
    "tailwindcss": "^3.1.8"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "quiet": true
    }
  }
}
